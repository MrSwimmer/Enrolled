<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Выйти из аккаунта"
        android:textColor="@color/grey_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/settings_about_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="О версии"
        android:textColor="@color/grey_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/settings_mark_in_gp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Оценить нас в Google Play"
        android:textColor="@color/grey_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/settings_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Рассказать друзьям"
        android:textColor="@color/grey_text"
        android:textSize="20sp" />

</LinearLayout>